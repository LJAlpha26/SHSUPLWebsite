@*

    Footer found at the bottom of every webpage.
    Something to note is that this is not fixed to the top of
    the page like the header, but is at the bottom and scrolled to.

*@

@inject IJSRuntime JsRuntime


<div id="line-2"/>  <!-- Horizontally spanning gradient line -->
<br/>

<table style="margin-left:50px; width:97%">

    <tr>

        @* Address portion *@
        <td style="vertical-align: text-top; width:19vw">
            
            
            <u>ADDRESS:</u>
            <br />
            <br />

            <a href="@ADDRESS_LINK" target="_blank" class="address">
                <text>Sam Houston Recreational Center</text>
                <br />
                <text>801 Bowers Blvd #162</text>
                <br />
                <text>Huntsville, TX 77340</text>
            </a>

        </td>

        @* Hours of operation portion *@
        <td style="vertical-align: text-top; width:25vw">

            <u>HOURS:</u>
            <br />
            <br />

            <table>
                <tr>
                    <td style="width:50%">
                        <text>5pm - 9pm</text> <br />
                        <text>5pm - 9pm</text> <br />
                        <text>12pm - 5pm</text> <br />
                        <text>CLOSED</text>
                    </td>
                    <td class="o-text" style="width:50%">
                        <text>Tues. and Thurs.</text> <br />
                        <text>Friday (as needed)</text> <br />
                        <text>Saturday</text> <br />
                        <text>Sun., Mon., and Wed.</text> <br />
                    </td>
                </tr>
            </table>

        </td>

        @* Info Icons portion *@
        <td style="width:20vw">

            <table class="w-100">
                <tr>

                    <td style="width:33%">
                        <a href="@INSTITUTION_LINK" target="_blank" class="icon" >
                            <img 
                                src="/Images/Icons/Institution.svg" 
                                title="Institution Homepage"    
                            />
                        </a>
                    </td>

                    <td style="width:34%">
                        <a href="@INSTA_LINK" target="_blank" class="icon">
                            <img 
                                src="/Images/Icons/Instagram.svg" 
                                title="Our Instagram"    
                            />
                        </a>
                    </td>

                    <td style="width:33%">
                        <a href="@EMAIL_LINK" target="_blank" class="icon">
                            <img 
                                src="/Images/Icons/Email.svg" 
                                title="Email us"    
                            />
                        </a>
                    </td>
                    
                </tr>
            </table>

        </td>

        @* Miscellanious portion *@
        <td style="width:22vw; text-align-last:center">

            <a class="to-top" @onclick=ToTop> <b>BACK TO TOP</b> </a>
            <br />
            <br />
            <text class="est">Proudly Est. 2003</text>

        </td>

    </tr>

</table>

<br />


@code {

    // Address of the current main workout location
    private readonly string ADDRESS_LINK = "https://www.google.com/maps/place/Recreational+Sports+Center/@30.7116275,-95.5466428,19.67z/data=!4m6!3m5!1s0x8647089687cae18b:0x32009323b39dba61!8m2!3d30.71173!4d-95.5465886!16s%2Fg%2F11bx1bfwkb?entry=ttu";

    // Link to the SHSU institution home page
    private readonly string INSTITUTION_LINK = "https://shsu.edu/";

    // Link to the shsu.powerlifting... email account
    private readonly string EMAIL_LINK = "https://mail.google.com/mail/?view=cm&fs=1&to=shsu.powerlifting.recruitment@gmail.com";

    // Link to the shus_powerlifting instagram account
    private readonly string INSTA_LINK = "https://www.instagram.com/shsu_powerlifting/";


    // Returns the user to the top of the current page
    private async void ToTop()
    {
        await JsRuntime.InvokeVoidAsync("BackToTop");
    }

}
